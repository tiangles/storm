<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.tiangles.storm">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <!--<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />-->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".StormApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:name">
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.MainActivity" />
        <activity android:name=".activities.QRCodeActivity" />
        <activity android:name=".activities.ChartActivity" />
        <activity
            android:name=".activities.WorkshopActivity"
            android:label="@string/title_activity_workshop" />
        <activity
            android:name=".activities.DeviceSystemInfoActivity"
            android:label="@string/title_activity_device_system_info"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.WorkshopDeviceListActivity" />
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".panel.PanelActivity"
            android:label="柜柜柜" />
        <activity
            android:name=".device.DeviceActivity"
            android:label="@string/title_activity_device"/>
    </application>

</manifest>