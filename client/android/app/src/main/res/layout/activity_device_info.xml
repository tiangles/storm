<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:text="设备编码：10HNC10AN001"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:text="设备名称：#1机组#1引风机"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:text="系统图(含电气系统)"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/power_switch"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="前相邻设备"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="10HNA30AA001"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="#1机组#1引风机入口电动门"
                android:gravity="center"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/power_switch"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="本设备"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="10HNA30AA001"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="#1机组#1引风机"
                android:gravity="center"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/power_switch"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="后相邻设备"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="10HNA30AA001"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="#1机组#1引风机出口电动门"
                android:gravity="center"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>